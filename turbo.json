{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                "build/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {},
        "typecheck": {},
        "db:push": {
            "cache": false
        },
        "db:gen": {
            "cache": false
        },
        "db:mig": {
            "cache": false
        }
    }
}