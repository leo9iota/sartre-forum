{
    "name": "sartre",
    "packageManager": "bun@1.3.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "format": "prettier . --write",
        "lint": "turbo run lint",
        "type": "turbo run typecheck",
        "db:push": "turbo run db:push",
        "db:gen": "turbo run db:gen",
        "db:mig": "turbo run db:mig",
        "setup": "bun install && docker compose up postgres-db -d && bun db:push",
        "start": "docker compose up postgres-db -d && bun dev",
        "stop": "docker compose down && bun run clean:ports",
        "clean": "bun run clean:cache && bun run clean:modules && bun run clean:ports",
        "clean:cache": "rm -rf apps/*/node_modules/.vite apps/*/.turbo packages/*/.turbo .turbo",
        "clean:modules": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
        "clean:ports": "bunx kill-port 3000 42069",
        "fresh": "bun run clean && bun install",
        "check:circular": "bunx madge --circular --extensions ts,tsx apps/web/src apps/server packages/shared"
    },
    "devDependencies": {
        "@sartre/ts": "workspace:*",
        "@eslint/compat": "^2.0.0",
        "@eslint/js": "^9.39.2",
        "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
        "@types/bun": "^1.3.5",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^16.5.0",
        "kill-port": "^2.0.1",
        "prettier": "^3.7.4",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "turbo": "^2.3.3",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.51.0"
    }
}