{
    "tabWidth": 4,
    "printWidth": 100,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "quoteProps": "as-needed",
    "trailingComma": "none",
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "plugins": [
        "prettier-plugin-astro",
        "@ianvs/prettier-plugin-sort-imports"
    ],
    "overrides": [
        {
            "files": "*.astro",
            "options": {
                "parser": "astro"
            }
        }
    ],
    "importOrderParserPlugins": [
        "typescript",
        "decorators-legacy",
        "jsx"
    ],
    "importOrder": [
        "<THIRD_PARTY_MODULES>",
        "",
        "^@/styles/(.*)$",
        "^@/components/(.*)$",
        "^@/lib/(.*)$",
        "",
        "^@/(.*)$",
        "",
        "^[./]"
    ]
}