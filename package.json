{
    "name": "sartre",
    "private": true,
    "packageManager": "bun@1.3.0",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "format": "prettier --write \"**/*.{ts,tsx,js,mjs,json,md,css}\"",
        "format:web": "prettier --write \"apps/web/**/*.{ts,tsx,js,mjs,json,md}\"",
        "format:server": "prettier --write \"apps/server/**/*.{ts,js,mjs,json,md}\"",
        "lint": "turbo run lint",
        "lint:web": "turbo run lint --filter=web",
        "lint:server": "turbo run lint --filter=server"
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "^4.0.0",
        "prettier": "^3.0.0",
        "turbo": "^2.0.0",
        "typescript": "^5.0.0"
    }
}
